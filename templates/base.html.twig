                    {% endif %}

                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin_dashboard') }}" class="text-yellow-300 hover:text-white font-medium transition">Admin</a>
                    {% endif %}
                </nav>

                <!-- Auth / Actions -->
                <div class="flex items-center space-x-4">
                    {% if app.user %}
                        <a href="{{ path('app_logout') }}" class="text-red-300 hover:text-white font-medium transition">DÃ©connexion</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="text-gray-100 hover:text-white font-medium transition">Connexion</a>
                        <a href="{{ path('app_register') }}" class="text-white bg-blue-700 px-3 py-1 rounded hover:bg-blue-600 transition text-sm">Inscription</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </header>


    <!-- MAIN -->
    <main class="flex-grow w-full mx-auto bg-white rounded-xl shadow-lg">

{% extends 'base.html.twig' %}

{% block title %}Inscription - Bibliothèque{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-indigo-50 px-4 py-12">
  <div class="max-w-md w-full bg-white p-8 rounded-2xl shadow-lg">
    <h2 class="text-3xl font-extrabold text-indigo-900 mb-6 text-center">
      Créez votre compte
    </h2>

    <form method="post" action="{{ path('app_register') }}" class="space-y-6">
      <div>
        <label for="username" class="block text-sm font-semibold text-indigo-700 mb-1">Nom d'utilisateur</label>
        <input id="username" name="username" type="text" required autofocus
               class="w-full px-4 py-3 border border-indigo-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
      </div>

      <div>
        <label for="email" class="block text-sm font-semibold text-indigo-700 mb-1">Email</label>
        <input id="email" name="email" type="email" required
               class="w-full px-4 py-3 border border-indigo-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
      </div>

      <div>
        <label for="password" class="block text-sm font-semibold text-indigo-700 mb-1">Mot de passe</label>
        <input id="password" name="password" type="password" required
               class="w-full px-4 py-3 border border-indigo-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
      </div>

      <button type="submit"
              class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg py-3 transition-colors">
        S'inscrire
      </button>
    </form>
  </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Notification{% endblock %}

{% block body %}
    <h1>Notification</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ notification.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ notification.content }}</td>
            </tr>
            <tr>
                <th>SendDate</th>
                <td>{{ notification.sendDate ? notification.sendDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsRead</th>
                <td>{{ notification.isRead ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ notification.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_notification_index') }}">back to list</a>

    <a href="{{ path('app_notification_edit', {'id': notification.id}) }}">edit</a>

    {{ include('notification/_delete_form.html.twig') }}
{% endblock %}

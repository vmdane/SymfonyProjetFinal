{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Livres dans la catégorie : {{ category.name }}</h1>

    <a href="{{ path('app_category_index') }}">← Retour aux catégories</a>

    <ul>
        {% for book in books %}
            <li>
                {{ book.titre }} -
                {% if book.disponible %}
                    Disponible
                {% else %}
                    Emprunté
                {% endif %}
            </li>
        {% else %}
            <li>Aucun livre dans cette catégorie.</li>
        {% endfor %}
    </ul>

    <a href="{{ path('app_book_index') }}">Afficher tous les livres</a> {# adapte si besoin #}
{% endblock %}
